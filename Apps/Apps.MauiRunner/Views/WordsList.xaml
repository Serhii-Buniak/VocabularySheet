<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apps.MauiRunner.Views.WordsList"
             xmlns:viewModels1="using:Apps.MauiRunner.ViewModels"
             xmlns:controls="using:Apps.MauiRunner.Xml.Controls"
             xmlns:dtos="clr-namespace:Application.Common.Commons.Dtos;assembly=Application.Common"
             x:DataType="viewModels1:WordsListVM"
             x:Name="wordList">

    <CollectionView ItemsSource="{Binding Words, Mode=OneWay}"
                    MinimumWidthRequest="{OnPlatform WinUI=650}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="dtos:WordModel">
                <controls:WordListItem
                    Margin="5"
                    Word="{Binding ., Mode=OneTime}"
                    OnClick="{Binding BindingContext.OpenWordCommand, Source={x:Reference wordList}}"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>