<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apps.MauiRunner.Xml.Controls.PrimaryButton"
             x:Name="PrimaryBtnX">

    <Button FontSize="24"
			WidthRequest="{Binding WidthRequest, Source={Reference PrimaryBtnX}}"
			HeightRequest="{Binding HeightRequest, Source={Reference PrimaryBtnX}}"
			ImageSource="{Binding ImageSource, Source={Reference PrimaryBtnX}}"
			Text="{Binding Text, Source={Reference PrimaryBtnX}}"
			Command="{Binding Command, Source={Reference PrimaryBtnX}}"
			IsEnabled="{Binding IsEnabled, Source={Reference PrimaryBtnX}}"
			IsVisible="{Binding IsVisible, Source={Reference PrimaryBtnX}}"
    />

</ContentView>
