<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apps.MauiRunner.Xml.Controls.SwiftButton"  
             x:Name="ShiftBtnX">
    
    <Button Text="{Binding Text, Source={Reference ShiftBtnX}}"
            Command="{Binding Command, Source={Reference ShiftBtnX}}"
            CommandParameter="{Binding CommandParameter, Source={Reference ShiftBtnX}}"
            FontSize="21"
            HorizontalOptions="Center"         
            WidthRequest="80"
            HeightRequest="65"
            Margin="2"
    />

</ContentView>
