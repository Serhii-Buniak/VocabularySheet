<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Domain.Views.WordsList"
             xmlns:model="clr-namespace:VocabularySheet.Application.Commons.Dtos;assembly=VocabularySheet.Application"
             xmlns:viewModels="clr-namespace:VocabularySheet.Maui.Domain.ViewModels;assembly=VocabularySheet.Maui.Domain"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Domain.Xml.Controls;assembly=VocabularySheet.Maui.Domain"
             x:DataType="viewModels:WordsListVM"
             x:Name="wordList">

    <CollectionView ItemsSource="{Binding Words, Mode=OneWay}"
                    MinimumWidthRequest="{OnPlatform WinUI=650}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:WordModel">
                <controls:WordListItem
                    Margin="10"
                    Word="{Binding ., Mode=OneTime}"
                    OnClick="{Binding BindingContext.OpenWordCommand, Source={x:Reference wordList}}"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>