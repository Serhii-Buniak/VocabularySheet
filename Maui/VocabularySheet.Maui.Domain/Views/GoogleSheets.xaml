<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Domain.Views.GoogleSheets"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Domain.Xml.Controls;assembly=VocabularySheet.Maui.Domain"
             xmlns:viewModels="clr-namespace:VocabularySheet.Maui.Domain.ViewModels;assembly=VocabularySheet.Maui.Domain"
             x:DataType="viewModels:GoogleSheetsVM">

    <VerticalStackLayout MinimumWidthRequest="{OnPlatform WinUI=600}">

        <StackLayout HeightRequest="50">
            <Label Text="{Binding Error}"
                   TextColor="{StaticResource Error}"
                   FontSize="21"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center" 
                   Margin="20"
                   IsVisible="{Binding IsErrorVisible}"/>
        </StackLayout>

        <controls:PrimaryButton Margin="10" Text="Synchronize"
                                Command="{Binding SynchronizeCommand}"
                                IsEnabled="{Binding IsGoogleSheetEnable}"
            
        />

        <controls:EditorForUrl Text="{Binding GoogleSheetUrl, Mode=TwoWay}"/>

        <controls:EditorForUrl Text="{Binding GoogleScriptUrl, Mode=TwoWay}"/>

    </VerticalStackLayout>
    
</ContentPage>