<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Domain.Xml.Controls.SwitchLabelPrimary"
             x:Name="SwitchLabelPrimaryX">
    <Border MaximumWidthRequest="300">
        <FlexLayout JustifyContent="SpaceBetween" Margin="10">

            <Label Text="{Binding LabelText, Source={Reference SwitchLabelPrimaryX}}"
                   VerticalOptions="Center"
                   FontSize="24"/>

            <Switch IsToggled="{Binding IsToggled, Source={Reference SwitchLabelPrimaryX}}"
                    HorizontalOptions="StartAndExpand"
                    MinimumWidthRequest="0"
                    WidthRequest="75"
                    Margin="0,0,5,0"
                    Scale="1.2"/>

        </FlexLayout>
    </Border>
</ContentView>
