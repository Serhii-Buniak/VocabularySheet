<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Domain.Xml.Controls"
             x:Class="VocabularySheet.Maui.Domain.Xml.Controls.ButtonIcon"
             x:DataType="controls:ButtonIcon"
             x:Name="ButtonIconX">
    <Border StrokeThickness="1" 
            StrokeShape="RoundRectangle 10"
            Stroke="{Binding BorderColor, Source={Reference ButtonIconX}}"
            Background="{Binding Color, Source={Reference ButtonIconX}}"
            MaximumWidthRequest="{OnPlatform WinUI=1600}"
            HeightRequest="100"
            WidthRequest="100"
            Margin="5"
            VerticalOptions="Start"
            Padding="5">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="Tapped" />
        </Border.GestureRecognizers>
        <Image Source="{Binding ImageSource, Source={Reference ButtonIconX}}"
               HeightRequest="80"
               WidthRequest="80"/>
    </Border>
</ContentView>