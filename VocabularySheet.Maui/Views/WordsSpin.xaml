<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Views.WordsSpin"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Controls"
             xmlns:converters="clr-namespace:VocabularySheet.Maui.Converters"
             xmlns:viewmodel="clr-namespace:VocabularySheet.Maui.ViewModels"
             x:DataType="viewmodel:WordsSpinVM">
    <ContentPage.Resources>
        <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <VerticalStackLayout HeightRequest="300">
                <Label Text="{Binding Word.Original}"
                       SemanticProperties.HeadingLevel="Level1"
                       FontSize="{OnPlatform WinUI=120, Android=42}"
                       HorizontalOptions="Center" />

                <Label Text="{Binding Word.Translation}"
                       SemanticProperties.HeadingLevel="Level2"
                       FontSize="{OnPlatform WinUI=70, Android=22}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">

                <Button Text="Start"
                        Command="{Binding StartCommand}"
                        CommandParameter="{Binding StartCancelCommand}"
                                        
                >
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding IsStarted}"
                                     Value="True">
                            <Setter Property="Text" Value="Stop" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

            </HorizontalStackLayout>

            <ScrollView HeightRequest="300"  MaximumWidthRequest="1200">
                <Border>
                    <Label Text="{Binding Word.Description}"
                       HorizontalOptions="Center"
                       FontSize="{OnPlatform WinUI=21, Android=18}"
                    />
                </Border>
            </ScrollView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
