@page "/fetchdata"
@using VocabularySheet.Application.Words.Queries;

@inject IMediator Mediator

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (wordReadDtos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WordReadDto word in wordReadDtos)
            {
                <tr>
                    <td>@word.Index</td>
                    <td>@word.Original</td>
                    <td>@word.Translation</td>
                    <td>@word.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<WordReadDto>? wordReadDtos;

    protected override async Task OnInitializedAsync()
    {
        wordReadDtos = await Mediator.Send(new GetAllWordsQuery());
    }
}
