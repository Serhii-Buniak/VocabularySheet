<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Controls.EditorForUrl"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Controls"
             x:Name="editorForUrl">
    <Editor Text="{Binding Text, Source={Reference editorForUrl}}"
            FontSize="16"
            HeightRequest="250"
            WidthRequest="{OnPlatform WinUI=600, Android=300}"
    />
</ContentView>
