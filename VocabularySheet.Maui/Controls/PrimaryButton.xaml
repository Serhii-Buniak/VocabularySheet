<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Controls.PrimaryButton"
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Controls"
             x:Name="primaryBtn">

    <Button FontSize="24"
			Margin="5"
			WidthRequest="160"
			Text="{Binding Text, Source={Reference primaryBtn}}"
			Command="{Binding Command, Source={Reference primaryBtn}}"
            CommandParameter="{Binding CancelCommand, Source={Reference primaryBtn}}"
			IsEnabled="{Binding IsEnabled, Source={Reference primaryBtn}}"
			IsVisible="{Binding IsVisible, Source={Reference primaryBtn}}"
    />

</ContentView>
