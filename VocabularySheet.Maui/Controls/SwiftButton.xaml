<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VocabularySheet.Maui.Controls.SwiftButton"  
             xmlns:controls="clr-namespace:VocabularySheet.Maui.Controls"
             x:Name="shiftBtn">
    
    <Button Text="{Binding Text, Source={Reference shiftBtn}}"
            Command="{Binding Command, Source={Reference shiftBtn}}"
            CommandParameter="{Binding CommandParameter, Source={Reference shiftBtn}}"
            FontSize="21"
            HorizontalOptions="Center"         
            WidthRequest="80"
            HeightRequest="65"
            Margin="2"
    />

</ContentView>
